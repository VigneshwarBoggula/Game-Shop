generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  image       String
  price       Float
  description String
  stock       Int
  category    String
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String
  image       String
  content     String
}

model ContactForm {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  inquery     String
}
